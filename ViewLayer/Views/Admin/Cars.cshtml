@model IEnumerable<BusinessLayer.Models.Car>
@Styles.Render("~/Content/adminstyle.css")

<div class="add-section">
    <div class="add-user-link">
        <a href='@Url.Action("AddCar", "Admin")' class="admin-link">Add new car</a>
    </div>
</div>
<div class="table-user-section" id="table-user-section"></div>

<script>
    load('@Url.Action("CarsList")');
    let editButtons = document.querySelectorAll(".edit");
    for(let button of editButtons){
        button.onclick = editFunc;
    }
    
    let deleteButtons = document.querySelectorAll(".delete");
    for(let button of deleteButtons){
        button.onclick = deleteFunc;
    }
    
    function editFunc() {   
        let value = this.value;
        request('@Url.Action("EditCar")', value);
    }
    
    function deleteFunc() {   
        let value = "?id=" + this.value;
        request('@Url.Action("DeleteCar")', value);
    }
    
    function request(url, data){
        let request = new XMLHttpRequest();
        request.open("GET", url);
        request.send(data);
    }
    
    function load(url){    
        let request = new XMLHttpRequest();
        request.open("POST", url);
        request.send();
        request.onreadystatechange = function(){
            if(request.readyState === 4 && request.status === 200){
                document.querySelector("#table-user-section").innerHTML = request.responseText;
            }
        }
    }
</script>