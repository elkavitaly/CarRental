@model System.Collections.Generic.IEnumerable<BusinessLayer.Models.Car>

<table class="users-table">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Company</th>
        <th>Class</th>
        <th>Price</th>
        <th>Image</th>
        <th>Options</th>
        <th>Transmission</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var car in Model)
    {
        <tr>
            <td>@car.Id</td>
            <td>@car.Name</td>
            <td>@car.Company</td>
            <td>@car.Class</td>
            <td>@car.Price</td>
            <td>@car.Image</td>
            <td>@car.Options</td>
            <td>@car.Transmission</td>

            <td>
                <a href='@Url.Action("EditCar")?id=@car.Id' class="edit-link">Edit</a>
            </td>
            <td>
                <a href='@Url.Action("DeleteCar")?id=@car.Id' class="edit-link">Delete</a>
            </td>
        </tr>
    }
</table>