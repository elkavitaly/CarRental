@model System.Collections.Generic.IEnumerable<BusinessLayer.Models.Order>

<table class="users-table">
    <tr>
        <th>OrderId</th>
        <th>User name</th>
        <th>Name</th>
        <th>Class</th>
        <th>Price</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Total</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.User.UserName</td>
            <td>@order.Car.Name</td>
            <td>@order.Car.Class</td>
            <td>@order.Car.Price</td>
            <td>@order.Start</td>
            <td>@order.End</td>
            <td>@order.Total</td>
            <td>
            <a href='@Url.Action("ConfirmOrder")?id=@order.Id' class="edit-link">Edit</a>
            <td>
                <a href='@Url.Action("DeleteOrder")?id=@order.Id' class="edit-link">Delete</a>
            </td>
        </tr>
    }
</table>